<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @image.title %></dd>
  <dt></dt>
  <dd><%= image_tag(@image.picture.url) if @image.picture? %></dd>
  <dt></dt>
  <dd><a href="<%= @image.picture.url%>"   target="_blank" download="filename">download</a></dd>
  <dt><strong><%= model_class.human_attribute_name(:artist_name) %>:</strong></dt>
  <dd><%= @image.artist_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:artist_age) %>:</strong></dt>
  <dd><%= @image.artist_age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @image.user_id %></dd>
</dl>

